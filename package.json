{
   "name": "devkeeper",
  "version": "1.0.1",
  "description": "Keeps node module development environment up to date. Installs config files, development dependencies and modifies your package.json file and keeps them updated.",
  "author": {
    "name": "Özüm Eldoğan",
    "github": "ozum"
  },
  "keywords": [
    "zero config",
    "boilerplate",
    "postinstall"
  ],
  "engines": {
    "node": ">=12.18.0"
  },
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "files": [
    "/bin",
    "/lib/**/!(*.spec|*.test)*.*",
    "/dist/**/!(*.spec|*.test)*.*",
    "/@types",
    "/module-files"
  ],
  "bin": {
    "devkeeper": "./bin/run"
  },
  "homepage": "https: //github.com/ozum/devkeeper",
  "bugs": "https://github.com/ozum/devkeeper/issues",
  "repository": "ozum/devkeeper",
  "license": "MIT",
  "scripts": {
    "execute": "devkeeper execute",
    "build": "devkeeper build",
    "test": "devkeeper test --testPathIgnorePatterns '(src/)|(dist/)' --coverage false --cache",
    "lint": "devkeeper lint",
    "format": "devkeeper format",
    "release": "devkeeper release",
    "readme": "devkeeper readme --exclude '**/commands/**/*'",
    "keep": "devkeeper update",
    "postinstall": "bin/run selflink",
    "readme:yargs": "cli-docs-generator --cli=devkeeper -o devkeeper.md"
  },
  "dependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "commitizen": "^4.1.2",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "lodash.union": "^4.6.0",
    "prettier": "^2.0.5",
    "readmeasy": "^0.2.7",
    "spdx-license-list": "^6.2.0",
    "ts-jest": "^26.1.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.6",
    "array-map-to-object": "0.0.4",
    "decamelize": "^4.0.0",
    "intermodular": "^0.34.0",
    "nunjucks": "^3.2.1",
    "parent-module": "^2.0.0",
    "readdirp": "^3.4.0",
    "winston": "^3.2.1",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@types/lodash.union": "^4.6.6",
    "@types/nunjucks": "^3.1.3",
    "@types/yargs": "^15.0.5",
    "cli-docs-generator": "^1.0.3"
  }
}
